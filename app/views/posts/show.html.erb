<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<hr>
<%= link_to "Edit", edit_post_path(@post), :class => "btn btn-outline-primary" %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %>

<hr>
<h3>Comments</h3>
<% @post.comments.each do |c| %>
  <div class="card">
    <div class="card-body">
      <p><strong><%= c.username %></strong>: <%= c.body %></p>
    </div>
  </div>
<% end %>

<hr>
<h3>Add comment</h3>

<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-primary'}) %><br>
  </p>
<% end %>